<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:gravity="center"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.login.LoginActivity">

    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="@dimen/margin_lefr_right"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/font_size_title_default"
            android:textColor="@color/colorBlack"
            android:text="@string/name_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/margin_16"
        android:layout_marginBottom="@dimen/margin_16"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_marginRight="@dimen/margin_default"
            android:layout_marginLeft="@dimen/margin_default"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:background="@color/colorDarkGray"
            android:layout_width="wrap_content"
            android:layout_height="1dp"/>
        <TextView
            android:textColor="@color/colorDarkGray"
            android:text="@string/title_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_marginRight="@dimen/margin_default"
            android:layout_marginLeft="@dimen/margin_default"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:background="@color/colorDarkGray"
            android:layout_width="wrap_content"
            android:layout_height="1dp"/>
    </LinearLayout>

    <LinearLayout
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/bg_office_login"
        android:padding="@dimen/padding_default"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginRight="@dimen/margin_default"
            android:src="@drawable/ic_mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_marginLeft="@dimen/margin_default"
            android:layout_marginRight="@dimen/margin_default"
            android:background="@color/colorDarkGray"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <TextView
            android:textColor="@color/colorRed"
            android:layout_marginLeft="@dimen/margin_default"
            android:text="@string/office365"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/margin_16"
        android:layout_marginBottom="@dimen/margin_16"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_marginRight="@dimen/margin_default"
            android:layout_marginLeft="@dimen/margin_default"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:background="@color/colorDarkGray"
            android:layout_width="wrap_content"
            android:layout_height="1dp"/>
        <TextView
            android:textColor="@color/colorDarkGray"
            android:text="@string/title_login_or"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_marginRight="@dimen/margin_default"
            android:layout_marginLeft="@dimen/margin_default"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:background="@color/colorDarkGray"
            android:layout_width="wrap_content"
            android:layout_height="1dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/margin_default"
        android:layout_marginLeft="@dimen/margin_default"
        android:layout_marginRight="@dimen/margin_default"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Email"
            android:textColor="@color/colorBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/login_txt_email"
            android:inputType="textEmailAddress"
            android:textSize="13sp"
            android:textColor="@color/colorBlack"
            android:hint="Your email address"
            android:layout_marginTop="@dimen/margin_item_top_bottom"
            android:padding="@dimen/padding_edittext"
            android:background="@drawable/bg_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/margin_16"
        android:layout_marginLeft="@dimen/margin_default"
        android:layout_marginRight="@dimen/margin_default"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="@string/password"
            android:textColor="@color/colorBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/login_txt_password"
            android:textSize="13sp"
            android:hint="@string/your_password"
            android:inputType="textPassword"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="@dimen/margin_item_top_bottom"
            android:padding="@dimen/padding_edittext"
            android:background="@drawable/bg_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="@dimen/margin_lefr_right"
        android:layout_marginRight="@dimen/margin_lefr_right"
        android:layout_marginTop="@dimen/margin_16"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/login_remenber_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/colorBlack"
            android:text="@string/remember_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="Forgot Password?"
            android:gravity="right"
            android:textColor="@color/colorBlue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <Button
        android:id="@+id/login_btn_sigin"
        android:elevation="0dp"
        android:gravity="center"
        android:text="@string/login"
        android:textAllCaps="false"
        android:background="@drawable/bg_button"
        android:layout_marginLeft="@dimen/margin_lefr_right"
        android:layout_marginRight="@dimen/margin_lefr_right"
        android:layout_marginTop="@dimen/margin_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>